<!-- activity_cmc.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".literary">

        <!-- Event Name Heading -->
        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:text="Literary Club presents..."
            android:layout_marginBottom="8dp"/>

        <!-- Subheading 1 -->
        <TextView
            android:id="@+id/subheadingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/purple_200"
            android:text="VocabBooster"
            android:layout_below="@id/eventNameTextView"
            android:layout_marginBottom="16dp"/>

        <!-- Image 1 Related to the Event -->
        <ImageView
            android:id="@+id/eventImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vocab"
            android:layout_below="@id/subheadingTextView"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>

        <!-- Subheading 2 -->
        <TextView
            android:id="@+id/subheadingTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/purple_200"
            android:text="Emojinary"
            android:layout_below="@id/eventImageView"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Image 2 Related to the Event -->
        <ImageView
            android:id="@+id/eventImageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/emoj"
            android:layout_below="@id/subheadingTextView2"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>

        <!-- Subheading 3 -->
        <TextView
            android:id="@+id/subheadingTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/purple_200"
            android:text="Nanotales"
            android:layout_below="@id/eventImageView2"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Image 3 Related to the Event -->
        <ImageView
            android:id="@+id/eventImageView3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nano"
            android:layout_below="@id/subheadingTextView3"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>

    </RelativeLayout>
</ScrollView>